
	<body>

		<div class="wrapper">
			<div class="inner">
				<img src="/images/image1.png" alt="" class="image-1">
				<form>
					<div class="form-holder">
						<span class="lnr lnr-envelope"></span>
						<input type="email" id="email" class="form-control" placeholder="Mail">
						<label for="email" id="invalid-email"></label>
					</div>
					<div class="form-holder">
						<span class="lnr lnr-lock"></span>
						<input type="password" id="password" class="form-control" placeholder="Password">
						<label for="password" id="invalid-pass"></label>
					</div>
					<p hidden id="isOwner">{{isOwner}}</p>
					<p hidden id="url">{{path}}</p>
					
					<button onclick="signinvalidate()" type="button">
						<span>Login</span>
					</button>
					<div>
						<p style="color: red;" id="error"></p>
					</div>
				</form>
				<img src="/images/image2.png" alt="" class="image-2">
			</div>
			
		</div>
		
	</body>
