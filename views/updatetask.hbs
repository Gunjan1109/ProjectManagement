<body>
    <form class="border border-light p-5">

    <p class="h4 mb-4 text-center">Update Task</p>

    <label for="textInput">Project Name</label>
    <input type="text" id="pname" class="form-control mb-4" placeholder="Project Name">

    <label for="textInput">Task Name</label>
    <input type="text" id="name" class="form-control mb-4" placeholder="Task Name">

     <label for="textInput">Status</label>
      <select class="browser-default custom-select mb-4" id="status">
        <option value="" disabled="true" selected="">Set Status</option>
        <option value="TODO">TODO</option>
        <option value="STARTED">Started</option>
        <option value="COMPLETED">Completed</option>
    </select>
     <div>
        <p id="error" style="color: red;"></p>
    </div>
    <button class="btn btn-info btn-block my-4" type="button" onclick="updatetask()">Update</button>

</form>
</body>
</html>